
<% if logged_in? %>
    <script type="text/javascript">
        window.currentUser = {
            'email': '<%= current_user.email%>',
            'last_name': '<%= current_user.last_name%>',
            'first_name': '<%= current_user.first_name%>',
            'buying_power': <%= current_user.buying_power%>,
            'id': <%= current_user.id%>
        }
        window.userInfoProtected = {
            'pass': '<%= current_user.password_digest%>',
            'sess': '<%= current_user.session_token%>'
        }
    </script>
<% end %>

<main id="root"></main>